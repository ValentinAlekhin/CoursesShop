<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input placeholder="Title" name="title" id="title" type="text" class="validate" value="{{course.title}}">
    <label for="title">Title</label>
  </div>

  <div class="input-field">
    <input placeholder="Price" name="price" id="price" type="number" class="validate" value="{{course.price}}">
    <label for="price">Price</label>
  </div>

  <div class="input-field">
    <input placeholder="Img" name="img" id="img" type="text" class="validate" value="{{course.img}}">
    <label for="img">Img</label>
  </div>

  <input type="hidden" name="id" value="{{course._id}}">

  <button class="btn btn-primary">Eddit</button>
</form>